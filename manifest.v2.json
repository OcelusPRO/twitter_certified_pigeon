{
    "manifest_version": 2,
    "name": "Twitter certified pigeon",
    "version": "1.3",
    "description": "Grâçe a cette extention vous ferez plus facilement la différence entre les utilisateur vérifier de twitter et les pigeons (ou arnaqueurs aussi)",
    "icons": {
        "16": "./assets/16.png",
        "32": "./assets/32.png",
        "48": "./assets/48.png",
        "256": "./assets/256.png",
        "512": "./assets/512.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://mobile.twitter.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "script.js"
    ],
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_icon": "./assets/32.png",
        "default_title": "Twitter certified pigeon",
        "default_popup": "options/options.html"
    }
}